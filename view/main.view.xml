<mvc:View controllerName="iotpush.controller.main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<l:VerticalLayout
						width="100%" >
						<l:content>
							<Table id="idIoTTable"
								items="{ 
									path: 'iot>/entries',
									sorter: {
										path: 'date'
									}
								}">
								<headerToolbar>
									<Toolbar>
										<Title text="{i18n>sensorTitle}" level="H2"/>
										<ToolbarSpacer></ToolbarSpacer>
										<Button tooltip="View Settings" 
												icon="sap-icon://drop-down-list" 
												press="handleViewSettingsDialogButtonPressed" />
									</Toolbar>
								</headerToolbar>
								<infoToolbar>
									<Toolbar
										id="vsdFilterBar"
										active="true"
										visible="false"
										press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
										<Label id="vsdFilterLabel" text="?" />
									</Toolbar>
								</infoToolbar>
								<columns>
									<Column><Text text="{i18n>date}" /></Column>
									<Column><Text text="{i18n>value}" /></Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{iot>date}" />
											<Text text="{iot>heat}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</l:content>
					</l:VerticalLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>